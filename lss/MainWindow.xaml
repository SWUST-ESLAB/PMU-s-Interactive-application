                        </lvc:CartesianChart.AxisX>
                    </lvc:CartesianChart>
                </GroupBox>
                <GroupBox Header="功率/w" HorizontalAlignment="Left" Width="950" FontFamily="华文楷体" Canvas.Left="10" Canvas.Top="570">

                        </lvc:CartesianChart.AxisX>

                    </lvc:CartesianChart>
                </GroupBox>
                <Menu HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="1890" FontFamily="华文楷体" Canvas.Left="10">
